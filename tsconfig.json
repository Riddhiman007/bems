{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./app/*",
        "./*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "app/_components/Icons/EyeIcon.jsx",
    "app/_components/Icons/EditIcon.jsx",
    "app/_components/Icons/DeleteIcon.jsx",
    "app/_components/Navigation/CircularNavigation/index.tsx",
    "app/_lib/auth/sendVerificationRequest.tss",
  ],
  "exclude": [
    "node_modules"
  ]
}